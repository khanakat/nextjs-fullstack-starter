# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# Choose one database provider:

# PostgreSQL (Recommended for production)
DATABASE_URL="postgresql://username:password@localhost:5432/fullstack_template"

# PostgreSQL Cloud Services:
# Neon (Free tier available): "postgresql://username:password@ep-xxx.neon.tech/neondb?sslmode=require"
# Supabase: "postgresql://postgres:password@db.xxx.supabase.co:5432/postgres"
# Railway: "postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway"
# PlanetScale (MySQL): "mysql://username:password@aws.connect.psdb.cloud/database?sslaccept=strict"

# MySQL (Alternative)
# DATABASE_URL="mysql://username:password@localhost:3306/fullstack_template"

# SQLite (Development only - automatically configured)
# DATABASE_URL="file:./dev.db"

# Direct URL for migrations (if using connection pooling)
# DIRECT_URL="postgresql://username:password@localhost:5432/fullstack_template"

# =================================================================
# AUTHENTICATION - CLERK (Primary Option)
# =================================================================

# Get these from https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your_clerk_publishable_key"
CLERK_SECRET_KEY="sk_test_your_clerk_secret_key"

# Clerk redirect URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# =================================================================
# AUTHENTICATION - NEXTAUTH (Alternative Option)
# =================================================================

# NextAuth configuration (if using instead of Clerk)
# NEXTAUTH_SECRET="your-nextauth-secret-here"
# NEXTAUTH_URL="http://localhost:3000"

# GitHub OAuth (optional)
# GITHUB_CLIENT_ID="your_github_client_id"
# GITHUB_CLIENT_SECRET="your_github_client_secret"

# Google OAuth (optional)
# GOOGLE_CLIENT_ID="your_google_client_id"
# GOOGLE_CLIENT_SECRET="your_google_client_secret"

# =================================================================
# FILE UPLOADS
# =================================================================

# UploadThing configuration (recommended for file uploads)
# Get these from https://uploadthing.com/
UPLOADTHING_SECRET="sk_live_your_uploadthing_secret"
UPLOADTHING_APP_ID="your_uploadthing_app_id"

# Alternative: Cloudinary (if preferred)
# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your_cloud_name"
# CLOUDINARY_API_KEY="your_api_key"
# CLOUDINARY_API_SECRET="your_api_secret"

# =================================================================
# EMAIL SERVICE
# =================================================================

# Resend (recommended for transactional emails)
# Get API key from https://resend.com/
RESEND_API_KEY="re_your_resend_api_key"

# Email configuration
EMAIL_FROM="noreply@yourapp.com"

# Alternative: SendGrid
# SENDGRID_API_KEY="SG.your_sendgrid_api_key"

# =================================================================
# EXTERNAL SERVICES
# =================================================================

# Stripe (for payments)
# Get keys from https://dashboard.stripe.com/
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Stripe Price IDs (create products in Stripe dashboard)
STRIPE_PRO_PRICE_ID="price_your_pro_monthly_price_id"
STRIPE_ENTERPRISE_PRICE_ID="price_your_enterprise_monthly_price_id"

# OpenAI (for AI features)
# OPENAI_API_KEY="sk-your_openai_api_key"

# Pusher (for real-time features)
# PUSHER_APP_ID="your_pusher_app_id"
# PUSHER_KEY="your_pusher_key"
# PUSHER_SECRET="your_pusher_secret"
# PUSHER_CLUSTER="your_pusher_cluster"
# NEXT_PUBLIC_PUSHER_KEY="your_pusher_key"
# NEXT_PUBLIC_PUSHER_CLUSTER="your_pusher_cluster"

# =================================================================
# MONITORING & ANALYTICS
# =================================================================

# Sentry (for error tracking)
# SENTRY_DSN="https://your_sentry_dsn"

# PostHog (for analytics)
# NEXT_PUBLIC_POSTHOG_KEY="phc_your_posthog_key"
# NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# =================================================================
# DEVELOPMENT & ADMIN
# =================================================================

# Admin user IDs (comma-separated, for Clerk)
ADMIN_USER_IDS="user_your_clerk_user_id"

# Admin emails (comma-separated, for NextAuth)
ADMIN_EMAILS="admin@example.com,another-admin@example.com"

# Development flags
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =================================================================
# PRODUCTION SPECIFIC
# =================================================================

# Only needed in production:
# NEXT_PUBLIC_APP_URL="https://your-domain.com"
# DATABASE_URL="your_production_database_url"
# DIRECT_URL="your_production_direct_url"

# =================================================================
# NOTES
# =================================================================

# 1. Never commit this file with real values to version control
# 2. Use environment-specific values for different deployment stages
# 3. Some services require webhook URLs - make sure to configure them
# 4. For production, use strong, unique secrets for all authentication keys
# 5. Consider using a service like Vercel/Netlify environment variables for production